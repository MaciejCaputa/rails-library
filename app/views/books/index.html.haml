%header
  = link_to "account_balance", "/", class: "material-icons"
  .title
    %h1 Rails Library
    %span -
    %h2 Books

%main
  = link_to "Add New Book", new_book_path

  %table
    %tr
      %th Title
      %th Author
      %th Show
      %th Edit
      %th Delete
    - @books.each do |book|
      %tr
        %td= book.title
        %td= book.author
        %td= link_to "show", book_path(book)
        %td= link_to "edit", edit_book_path(book)
        %td= link_to "delete", book_path(book), method: :delete
